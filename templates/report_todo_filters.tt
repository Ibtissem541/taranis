<div class="filter-block filter-block-separator">

	<form id="form-report-todo-search">
		<div class="block">
			<label for="report-todo-filters-search">Search</label><br>
			<input id="report-todo-filters-search" name="search" type="text" class="input-default search-default">
		</div>
		<div class="block">
			<span>&nbsp;</span>
			<input type="button" id="btn-report-todo-search" class="button" value="Search!">
		</div>
	</form>
</div>

<div class="action-block filter-block-separator">
	[% IF write_right %]
	<div class="block">
		<input type="button" id="btn-add-report-todo" class="button" value="Add new to-do">
	</div>
	[% END %]
	<div class="block align-block-right">
		<span class="bold page-title">Report to-do</span>
	</div>
</div>